# Production Environment Configuration for Crypto Pulse V3
# Copy this file to .env.production and fill in your actual values

# Database Configuration
POSTGRES_USER=cryptopulse
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://cryptopulse:your_secure_postgres_password_here@postgres:5432/crypto_pulse_v3
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your_very_secure_secret_key_here_32_chars_min

# API Keys (REQUIRED for production)
BINANCE_API_KEY=your_production_binance_api_key
BINANCE_SECRET_KEY=your_production_binance_secret_key
ALPACA_API_KEY=your_production_alpaca_api_key
ALPACA_SECRET_KEY=your_production_alpaca_secret_key
PERPLEXITY_API_KEY=your_production_perplexity_api_key

# Trading Configuration
ENVIRONMENT=production
MAX_PORTFOLIO_ALLOCATION=0.10
MIN_PORTFOLIO_ALLOCATION=0.05
MAX_DRAWDOWN_THRESHOLD=0.10
MIN_DAILY_VOLUME_USD=100000000
MIN_DAILY_VOLATILITY=0.02

# Risk Management (Conservative for production)
ATR_STOP_MULTIPLIER=4.0
MAX_CORRELATION_THRESHOLD=0.6
MAX_SECTOR_EXPOSURE=0.3
VOLATILITY_SCALING_FACTOR=0.4

# System Configuration
LOG_LEVEL=INFO
ANALYSIS_INTERVAL_MINUTES=15
SENTIMENT_INTERVAL_HOURS=1

# Performance Targets (Production)
TARGET_ANNUAL_RETURN=0.25
TARGET_SHARPE_RATIO=2.0
TARGET_WIN_RATE=0.70
TARGET_PROFIT_FACTOR=2.5

# Notification Settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
ENABLE_NOTIFICATIONS=true

# Monitoring and Alerting
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_RISK_ALERTS=true
ENABLE_TRADE_NOTIFICATIONS=true

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
